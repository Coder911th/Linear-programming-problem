mixin format(a, x)
    if x == null
        if a == 0
            return
        else
            if a > 0
                span &nbsp+&nbsp#{a}
            else
                span &nbsp;-&nbsp#{a * -1}
    else
        if a == 0
            span 0
        else
            if a == 1
                span #{x}
            else
                if a == -1
                    span #{'-' + x}
                else
                    span #{a + x}
    

