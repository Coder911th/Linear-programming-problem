case object
    when 'row'
        - for (let j = 0; j < n - 1; j++)
            input(
                type = "text", 
                placeholder = "0", 
                size = size
            )
            span x#[sub= j + 1]
            if j !== n - 2
                span +
        span =
        input(
            type = "text", 
            placeholder = "0", 
            size = size
        )
    when 'table'
        div
            - for (let j = 0; j < n - 1; j++)
                input(
                    type = "text", 
                    placeholder = configurable && "0", 
                    size = size, 
                    value = data && data[0][j]
                )
                span x#[sub= j + 1]
                if j === n - 2
                    span -->
                else
                    span +
            
            - let variants = ['min', 'max'];
            select(type="select-one")
                for variant in variants
                    option(
                        value = variant, 
                        selected = data && variant === data[0][n - 1]
                    )= variant

        - for (let i = 1; i < m; i++)
            div
                - for (let j = 0; j < n - 1; j++)
                    input(
                        type = "text", 
                        placeholder = configurable && "0", 
                        size = size, 
                        value = data && data[i][j]
                    )
                    span x#[sub= j + 1]
                    if j !== n - 2
                        span +
                span =
                input(
                    type = "text", 
                    placeholder = configurable && "0", 
                    size = size, 
                    value = data && data[i][n - 1]
                )
